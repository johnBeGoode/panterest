{% extends 'layouts/base.html.twig' %}

{% block title 'Profile' %}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto text-center">
            <h1 class="my-5">Profile</h1>
            <img src="{{ app.user.gravatarUrl }}" alt="{{ app.user.firstname }}'s avatar" class="rounded-circle">
            <p class="lead mt-5">{{app.user.email }}</p>
            <hr>
            <p><small>Compte créé le {{ app.user.createdAt|date('d/m/Y')}}</small></p>
            <h2>{{app.user.firstname}} {{ app.user.lastname }}</h2>
            <p>
                <a href="{{ path('app_account_edit') }}">Edit account</a> | <a href="{{ path('app_account_change_password') }}">Change password</a>
            </p>
        </div>
    </div>
{% endblock %}